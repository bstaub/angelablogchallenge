<%- include('partial/header') -%>

<h1> <%= title %> </h1>

<form method="post" action="/compose">
    <div class="form-group">
        <label for="titleText">Title</label>
        <input type="text" class="form-control" id="titleText" aria-describedby="titleText" placeholder="" name="titleText">
        <small id="titleTexthelp" class="form-text text-muted">Help Text Example for Title</small>
    </div>
    <div class="form-group">
        <label for="postTextarea">Post</label>
        <textarea class="form-control" id="postTextarea" rows="3" name="postTextarea"></textarea>
    </div>
    <button type="submit" class="btn btn-primary" name="abschicken" value="ok">Abschicken</button>
</form>


<%- include('partial/footer') -%>